<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_marginTop="20dip" >
        <ImageView
            android:id="@+id/heartFlatImage"
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
            android:src="@drawable/bg_heart_flat"
            android:background="#272727" />
        <ImageView
            android:id="@+id/heartPeakImage"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
            android:src="@drawable/bg_heart_peak"
            android:background="#272727" />
        <TextView
            android:id="@+id/heartValue"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_marginRight="20dip"
            android:text="0"
            android:textSize="56dip"
            android:textColor="#eeeeee" >
        </TextView>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
          	android:layout_height="wrap_content"
          	android:layout_marginRight="20dip"
          	android:layout_marginTop="58dip"
            android:text="bpm"
            android:textSize="20dip"
            android:textColor="#eeeeee" >
        </TextView>
    </RelativeLayout>
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_marginTop="20dip" >
        <ImageView
            android:id="@+id/speedImage"
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
            android:src="@drawable/bg_speed" />
        <ImageView
            android:id="@+id/speedBlockerImage"
            android:layout_width="match_parent"
	    	android:layout_height="98dip"
        	android:background="#272727" />
        <TextView
            android:id="@+id/speedValue"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_marginRight="20dip"
            android:text="0.0"
            android:textSize="56dip"
            android:textColor="#eeeeee" >
        </TextView>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
          	android:layout_height="wrap_content"
          	android:layout_marginRight="20dip"
          	android:layout_marginTop="58dip"
            android:text="m/s"
            android:textSize="20dip"
            android:textColor="#eeeeee" >
        </TextView>
    </RelativeLayout>
    	 
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:text="Latitude: " >
        </TextView>

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unknown" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:text="Longitute: " >
        </TextView>

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unknown" >
        </TextView>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:text="Prev Latitude: " >
        </TextView>

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unknown" >
        </TextView>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:text="Prev Longitude: " >
        </TextView>

        <TextView
            android:id="@+id/TextView08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unknown" >
        </TextView>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/button01"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="SUBMIT"
		    android:onClick="onButtonClick">
		</Button>

        <Button
            android:id="@+id/button02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClick"
            android:text="ROUTES" />

    </LinearLayout>
   
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip" >
        <fragment
          android:id="@+id/map"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:name="com.google.android.gms.maps.MapFragment"/>
    </LinearLayout>
</LinearLayout> 

